@page "/themes"
@rendermode InteractiveServer

<PageTitle>Theme</PageTitle>

<FluentLayout>
    <FluentHeader>Theme Controls</FluentHeader>

    <FluentStack Orientation="Orientation.Vertical">
        <FluentCard>
            <FluentLabel>Theme Switch (Toggle Light/Dark)</FluentLabel>
            <ThemeSwitch />
        </FluentCard>

        <FluentCard AreaRestricted="false">
            <ThemeMode Options="modeOptions" />
        </FluentCard>

        <FluentCard AreaRestricted="false">
            <ThemeColor Options="colorOptions" />
        </FluentCard>
    </FluentStack>
</FluentLayout>

@code {
    private ThemeOptions modeOptions = new() { Label = "Theme Mode (System/Light/Dark)" };
    private ThemeOptions colorOptions = new() { Label = "Theme Color (Office Color)" };
}